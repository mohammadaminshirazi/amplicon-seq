df <- read.csv("C:/Users/M.A.Shirazi/OneDrive/Desktop/آمار شریفی زارچی/c5de246ccf295b0dd1f2437ac01050ba/R Workshop/2 - Data Visualization/Salaries.csv")

ggplot(data = df) +
  geom_point(mapping = aes(x= yrs.service , y= salary, color= salary > 100000))

###


ggplot(df) +
  geom_point( aes(x= yrs.service ,y=salary, shape = sex , color=rank))

