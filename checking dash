#new dataset
?diamonds
View(diamonds)

###

ggplot(diamonds) + geom_bar(aes(x = cut))

###

ggplot(diamonds) + stat_count(aes(x = cut))


###


df1 <- data.frame(cut = c("Fair", "Good" , "Very Good" , "Premium" , "Ideal"), count= c(100,150,200,130,400))

ggplot(df1) + geom_bar(aes(x = cut , y= count), stat = "identity")

###

ggplot(df1) + geom_col(aes(x = cut,y=count))


