###################### ggplot ###################
### 1st Step: Install Packages 

install.packages("ggplot2")
library(ggplot2)

### 2nd Step: what is our data 

?mpg

### how to write the structure of code

ggplot(data = mpg) +
  geom_point(mapping = aes(y = hwy, x = displ))

### how change the structure to more profassional

ggplot(data = mpg) +
  geom_point(mapping = aes(y = hwy, x = displ , color=class))

###

ggplot(data = mpg) +
  geom_point(mapping = aes(y = hwy, x = displ , color = "red" ))

###

ggplot(data = mpg) +
  geom_smooth(mapping = aes(y = hwy, x = displ ))

###

ggplot(data = mpg) +
  geom_smooth(mapping = aes(y = hwy, x = displ, color=class ))

###

ggplot(data = mpg) +
  geom_point(mapping = aes(y = hwy, x = displ , color = drv )) +
  geom_smooth(mapping = aes(y = hwy, x = displ, color= drv, linetype= drv ))

### heritage in R

ggplot(data = mpg , mapping = aes(y = hwy, x = displ , color = drv)) +
  geom_point() +
  geom_smooth(mapping = aes(linetype= drv ))

